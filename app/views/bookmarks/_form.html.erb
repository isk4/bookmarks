<%= form_with(model: bookmark, local: true) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
      <% bookmark.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
 
  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :type_id %>
    <% unless bookmark.type.nil? %>
      <%= form.select "type_id", options_from_collection_for_select(@types, :id, :name, bookmark.type.id), prompt: "Select a type" %>
    <% else %>
      <%= form.select "type_id", options_from_collection_for_select(@types, :id, :name), prompt: "Select a type" %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <% unless bookmark.category.nil? %>
      <%= form.select "category_id", options_from_collection_for_select(@categories, :id, :name, bookmark.category.id), prompt: "Select a category" %>
    <% else %>
      <%= form.select "category_id", options_from_collection_for_select(@categories, :id, :name), prompt: "Select a category" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
