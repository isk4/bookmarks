<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<hr>

<form style="display: flex; align-items: center; justify-content: space-around;">
  <h3>Add new bookmark:</h3>

  <label for="name">Name</label>
  <input type="text" name="name" id="name">

  <label for="url">URL</label>
  <input type="text" name="url" id="url">
  
  <label for="category_id">Category</label>
  <select name="category_id" id="category_id">
    <%= @categories.each do |category| %>
      <option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  </select>


  <label for="type_id">Type</label>
  <select name="type_id" id="type_id">
    <%= @types.each do |type| %>
      <option value="<%= type.id %>"><%= type.name %></option>
    <% end %>
  </select>

  <button type="submit">Add</button>
</form>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Type</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.type %></td>
        <td><%= bookmark.category %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
